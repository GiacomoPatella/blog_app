<%= form_for @post, html: { multipart: true } do |form| %>
  <%= form.label :title %><br>
  <%= form.text_field :title %>
  <br><br>
  <%= form.label :content %><br>
  <%= form.text_field :content %>
  <br><br>
    <%= form.label :image %>
  <%= form.file_field :image %>
  <br><br>
  <%= form.submit 'Submit', class: 'btn btn-lng btn-success' %>
<% end %>
