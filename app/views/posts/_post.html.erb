<h1><%= post.title %></h1>
<p><%= post.content %></p>
<h4>Comments</h4>
<p><% post.comments.each do |comment| %>
  From: <%= comment.user.email %><br>
  <%= comment.body %></p>
<% end %>
</br>
<%= link_to 'Edit post', edit_post_path(post) %>
<%= link_to 'Add a comment', new_post_comment_path(post) %>
<%= link_to 'Delete post', post_path(post) , method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %>
</br></br>
